<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="ZooApp.MainManager"
        xmlns:local="clr-namespace:ZooApp"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        mc:Ignorable="d"
        Title="MainManager" Height="515" Width="960">
    
    <Grid Background="#171717">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="114.76"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <!-- Боковая панель -->
        <StackPanel Width="230" Grid.RowSpan="4" Background="#252525" Margin="0,0,10,0">
        
            <!--Имя пользователя-->
            
            <WrapPanel>
                <Image Height="20" Width="20" Source="/emblems/4elove4eK.jpeg" Margin="11,15,0,0"></Image>
                <TextBlock Text="Иванов Иван" FontSize="20" Foreground="White" TextAlignment="Left" Margin="2,13,0,0" />
            </WrapPanel>

            <!-- Отчётность -->
            <Grid>
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <Line Grid.Row="0" Grid.Column="0" X1="5" X2="225" Stroke="#565656" StrokeThickness="1" Margin="0,19,0,0"/>
                
                <TextBlock Grid.Row="1" Grid.Column="0" TextWrapping="Wrap" Text="Отчётность" Foreground="White" Margin="10, 10, 0, 0" FontSize="15" FontWeight="SemiBold"/>
                
                <!--Сформировать + Иконка-->
                
                <WrapPanel Grid.Row="2"  Margin="25, 0, 0,0">
                    <Image Source="/emblems/qwe.jpg" Height="20" Width="20" Margin="0,0,-26,0"></Image>
                    <TextBlock Grid.Row="2" Hyperlink.Click="Reporting_Click"  Margin="25, 5, 0, 0" FontSize="15" >
                        <Hyperlink Foreground="White" TextDecorations="None">Сформировать</Hyperlink>
                    </TextBlock>
                </WrapPanel>
                
                <!--Просмотерть ???????-->
                
                <TextBlock Grid.Row="3" Grid.Column="0" TextWrapping="Wrap" Text="Просмотреть" Foreground="White" Margin="25, 5, 0, 10" FontSize="15"/>
                
            </Grid>
            
            <!-- Заказы -->
            
            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <Line Grid.Row="0" Grid.Column="0" X1="5" X2="225" Stroke="#565656" StrokeThickness="1" Margin="0,5,0,0"/>
                
                <TextBlock Grid.Row="1" Grid.Column="0" TextWrapping="Wrap" Text="Заказы" Foreground="White" Margin="10, 10, 0, 0" FontSize="15" FontWeight="SemiBold"/>

                <!--Просмотреть + Иконка-->

                <WrapPanel Grid.Row="2"  Margin="25, 0, 0,0">
                    <Image Source="/emblems/prosmotret.jpeg" Height="20" Width="20" Margin="0,0,-26,0"></Image>
                    <TextBlock Grid.Row="2" Hyperlink.Click="OrderForManager_Click"  Margin="25, 5, 0, 0" FontSize="15" >
                        <Hyperlink Foreground="White" TextDecorations="None">Просмотреть</Hyperlink>
                    </TextBlock>
                </WrapPanel>

            </Grid>
            

            <!-- Пользователи -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <Line Grid.Row="0" X1="5" X2="225" Stroke="#565656" StrokeThickness="1" Margin="0,5,0,0"/>
                <TextBlock Grid.Row="1" TextWrapping="Wrap" Text="Пользователи" Foreground="White" Margin="10, 10, 0, 0" FontSize="15" FontWeight="SemiBold"/>

                <!--Добавить + Иконка-->

                <WrapPanel Grid.Row="2"  Margin="25, 5, 0, 10">
                    <Image Source="/emblems/4elove4eK.jpeg" Height="20" Width="20" Margin="0,0,-26,0"></Image>
                    <TextBlock Grid.Row="2" Hyperlink.Click="Insert_Click"  Margin="25, 5, 0, 10" FontSize="15" >
                        <Hyperlink Foreground="White" TextDecorations="None">Добавить</Hyperlink>
                    </TextBlock>
                </WrapPanel>

            </Grid>
            
            <!-- Кнопки -->
           
            <Button x:Name="switchBtn" Grid.Row="0" Margin="0, 80, 0, 0" Content="Сменить пользователя" Width="220" BorderThickness="15,15,15,15" Background="#FF3B3B42" BorderBrush="#FF3B3B42" Click="exitBtn_Click" FontWeight="SemiBold" Height="32"/>
            <Button x:Name="exitBtn" Grid.Row="1" Margin="0, 10, 0, 0" Content="Выйти из программы" Width="220" BorderThickness="15,15,15,15" Background="#FF6B3535" BorderBrush="#FF6B3535" Click="exitBtn_Click" FontWeight="SemiBold" Height="32"/>

        </StackPanel>

    </Grid>
</Window>
