<Window x:Class="ZooApp.MainSeller"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZooApp"
        mc:Ignorable="d"
        Title="MainSeller" Height="496" Width="960" Background="#171717">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Width="230" Grid.RowSpan="4" Background="#252525" Margin="0,0,10,0">

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Иванов Иван" FontSize="20"  Foreground="White" TextAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,13,0,0"></TextBlock>
            <Line X1="5" X2="225" Stroke="#565656" StrokeThickness="1" Margin="0,19,0,0"></Line>
            <TextBlock Text="Продажи" FontSize="18" Foreground="White" Margin="0,21,0,0"></TextBlock>
                <WrapPanel Margin="28,0,0,0" >
                <Image Width="17" Height="17" Source="/emblems/qwe.jpg" Margin="0,15,0,0"/>
                <Label Height="25" x:Name="label1" Margin="0,16,0,0">

                    <Hyperlink Click="Hyperlink_Click" Foreground="White" TextDecorations="None" >
                        <Run Text="Оформить"/>
                    </Hyperlink>
                </Label>
            </WrapPanel>
            

        </StackPanel>

















    </Grid>
</Window>
